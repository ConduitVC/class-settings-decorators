{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2017",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "lib": [
      "es2015",
      "es2015.symbol"
    ]
  },
  "include": [
    "src/**/*"
  ]
}